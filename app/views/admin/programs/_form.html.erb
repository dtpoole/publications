<%= error_messages_for 'program' %>

<div id="person_entry">
	
	<table class="person">
		<tr>
			<th>Title*</th>
			<td>
				<%= text_field :program, :program_title, { :size => 50 } %>
			</td>
		</tr>
		
		<tr>
			<th>Abbreviation</th>
			<td>
				<%= text_field :program, :program_abbrev, { :size => 6 } %>
			</td>
		</tr>
		
		<tr>
			<th>Category</th>
			<td>
				<%= select :program, :program_category, CONFIG[:app][:program_categories], { :include_blank => true } %>
			</td>
		</tr>
		
		<tr>
			<th>Investigators</th>
			<td>
				<select name="investigators[]" multiple="multiple" size="8" style="width: 100%;">
					<%= options_for_select(@investigators.collect { |i| [ i.fullname(true), i.id ]},
					@program.investigator_programs.collect { |i| i.investigator_id }) %>
				</select>
			</td>
		</tr>
	
	<!--
		<tr>
			<th>Start Date</th>
			<td>
				<%= text_field :program, :start_date , :size => 8 %>
			</td>
		</tr>
	
		<tr>
			<th>End Date</th>
			<td>
				<%= text_field :program, :end_date , :size => 8 %>
			</td>
		</tr>
	-->
	</table>

</div>

<div id="buttons" style="margin-top: 1em;">
	<%- if controller.action_name =~ /new|create/ -%>
		<%= submit_tag "Add" %>
	<%- else -%>
		<%= submit_tag "Modify" %>
	<% end %>
	<%= submit_tag "Cancel" %>
</div>

<%= javascript_tag "$('program_program_title').focus()" %>
