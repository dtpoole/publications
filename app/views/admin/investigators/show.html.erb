<% @title = "Administration : Investigators : #{@investigator.fullname}" %>

<div id="person_entry">
	<table class="person">
		<tr>
			<th>FoxNetID</th>
			<td><%= @investigator.username %></td>
		</tr>
		
		<tr>
			<th>Name</th>
			<td><%= @investigator.fullname %></td>
		</tr>
		
		<% if !@investigator.email.blank? %>
		<tr>
			<th>Email</th>
			<td><%= @investigator.email %>
			</td>
		</tr>
		<% end%>
		
		<% if @investigator.programs.length > 0 %>
		<tr>
			<th>Program</th>
			<td>
				<%= (@investigator.programs.collect { |p| link_to p.program_title, :controller => 'programs', :action => 'show', :id => p }).join('<br>') %>
			</td>
		</tr>
		<% end %>
		
		<% if !@investigator.pubmed_search_name.blank? %>
		<tr>
			<th>Alternate PubMed Search Name</th>
			<td>
			<%= @investigator.pubmed_search_name %>
			</td>
		</tr>
		<% end %>
	</table>
</div>

<div id="buttons" style="margin-top: 1em;">
	<%= link_to "Edit", :action => 'edit', :id => @investigator -%> &nbsp;
	<%= link_to "Remove", { :action => 'destroy', :id => @investigator }, 
		:confirm => "Remove #{@investigator.fullname}?" -%>
</div>